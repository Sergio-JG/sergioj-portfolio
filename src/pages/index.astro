---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import GitHub from "../components/icons/GitHub.astro";
import Social from "../components/icons/Social.astro";
import Email from "../components/icons/Email.astro";
import Experience from "../components/Experience.astro";
import Education from "../components/Education.astro";
import Projects from "../components/Projects.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout
  title="Portfolio de Sergio - Desarrollador y Programador Web"
  description="Contrata a Sergio para crear aplicaciones web eficientes y escalables."
>
  <main class="px-4">
    <section id="top" class="w-full mx-auto lg:w-[740px] lg:pb-7 pb-6 pt-40">
      <div
        class="text-white text-3xl lg:text-4xl font-bold flex flex-row gap-x-2"
      >
        <img
          class="rounded-full size-14 me-2"
          src="https://avatars.githubusercontent.com/u/97886835?v=4"
          alt="sergioj-pic"
        />
        <h1 class="p-2">Hola, soy Sergio</h1>
        <a
          href="https://www.linkedin.com/in/sergiojuarezgago"
          target="_blank"
          rel="noopener"
          ><div class="flex justify-center items-center"></div><Badge>
            Disponible para trabajar
          </Badge>
        </a>
      </div>
      <h2 class="text-2xl text-wrap opacity-90 pt-5 max-w-[700px]">
        <span class="text-yellow-300/80">Desarrollador Full Stack </span>de
        Zamora, España,<span class="text-purple-300/90">
          6 meses de experiencia</span
        >
        en la creación de <span class="text-green-300/90">
          soluciones web eficientes y escalables.
        </span>
      </h2>
      <nav class="flex lg:gap-x-4 gap-x-3 mt-8 mb-8">
        <Social href="https://www.linkedin.com/in/sergiojuarezgago">
          <LinkedIn class="lg:size-7 size-3" />
          LinkedIn
        </Social>
        <Social href="https://github.com/Sergio-JG">
          <GitHub class="lg:size-7 size-3" />
          GitHub
        </Social>
        <Social href="mailto:sergiojbusiness@hotmail.com">
          <Email class="lg:size-7 size-3" />
          Contáctame
        </Social>
      </nav>
    </section>

    <section id="experiencia" class="w-full mx-auto lg:w-[740px] pb-10 py-5">
      <Experience />
    </section>

    <section id="educacion" class="w-full mx-auto lg:w-[740px] pb-10 py-5">
      <Education />
    </section>

    <section id="proyectos" class="w-full mx-auto lg:w-[740px] pb-10 py-5">
      <Projects />
    </section>

    <section id="sobreMi" class="w-full mx-auto lg:w-[740px] pb-10 py-5">
      <AboutMe />
    </section>
  </main>
</Layout>
