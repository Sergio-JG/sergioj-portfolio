---
interface Props {
  name: string;
  start_date: string;
  end_date: string;
  place: string;
  description: string;
}

const { start_date, end_date, place, description } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
  {place}
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
  >{start_date} - {end_date}</time
>
<h3 class="text-lg font-semibold text-blue-400 dark:text-white"></h3>
<p class="text-base font-normal text-white-500 dark:text-white-400 opacity-80">
  {description}
</p>
