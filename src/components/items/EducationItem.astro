---
interface Props {
  name: string;
  start_date: string;
  end_date: string;
  place: string;
  description: { [key: string]: string | undefined };
}

const { start_date, end_date, place, description, name } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-purple-400 dark:text-gray-500"
  >{start_date} - {end_date}</time
>
<h3 class="text-lg font-semibold text-green-400 dark:text-white">
  {name} - {place}
</h3>
<ul
  class="text-base font-normal text-white-500 dark:text-white-400 opacity-80 text-pretty"
>
  {
    Object.entries(description).map(([key, value]) =>
      value ? (
        <li id={key} class="ms-5" style="list-style-type: circle;">
          {value}
        </li>
      ) : null
    )
  }
</ul>
